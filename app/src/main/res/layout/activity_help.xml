<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adamoff.andrej.ltlhuntingcameratool.help"
    android:id="@+id/help">

    <TextView android:text="@string/learn_imap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtimap"
        android:onClick="imap"
        android:clickable="true"
        android:enabled="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtless"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="lesssecure"
        android:clickable="true"
        android:password="false"
        android:layout_below="@+id/txtimap"
        android:textSize="22dp"
        android:layout_marginTop="20dp"
        android:text="@string/learn_lesssecure" />

</RelativeLayout>
